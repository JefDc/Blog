{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

    <div class="container">
    {% for article in articles %}
        <h2 class="mt-5">{{ article.title }}</h2>
        <a href="{{ path('article_show', {'id': article.id}) }}" class="text-white">{{ article.content }}</a>
        <p><span>Cat√©gorie : </span>{{ article.category.name }}</p>
        <strong>Tags :</strong>
        <ul>
            {% for tag in article.tags %}
                <li>{{ tag.name }} </li>
            {% else %}
                <li>No tags for this article</li>
            {% endfor %}
        </ul>

    {% endfor %}

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}



    </div>
{% endblock %}
